{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ADL",
	"patterns": [{
			"include": "#keywords"
		}, {
			"include": "#strings"
		}, {
			"include": "#imports"
		}, {
			"include": "#records"
		}
	],
	"repository": {
		"imports": {
			"patterns": [{
				"captures": {
					"1": {
						"name": "meta.preprocessor.adl"
					}
				},
				"match": "^\\s*import(.*);$"
			}]
		},
		"records": {
			"begin": "^\\s*(struct|union|type|annotation)([^{]*)([\\s]*){",

			"beginCaptures": {
				"1": { "name": "storage.type.adl"},
				"2": { "name": "entity.name.class.adl" }
			},
			"end": "};",
			"name": "meta.class.adl",
			"patterns": [{
				"include": "#fields"
			}]
		},
		"fields": {
			"patterns": [{
				"match": "\\s*([A-Z][A-Za-z0-9_]*)(<([^>]*)>)?\\s*([A-Za-z0-9_]*)(\\s*=\\s*([^;]*))?;",
				"captures": {
					"1": {
						"name": "entity.name.type.adl"
					},
					"3": {
						"name": "variable.parameter"
					},
					"4": {
						"name": "entity.name.adl"
					}
				}
			}]
		},
		"type": {

		},
		"genericType": {
			
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.adl",
				"match": "\\b(if|while|for|return|null)\\b"
			}, {
				"name": "storage.type.adl",
				"match": "\\bmodule\\b"
			}, {
				"name": "variable.language.adl",
				"match": "\\b(null)\\n"
			}, {
				"name": "comment.adl",
				"match": "(\/\/|\/\/\/)\\s*.*"
			}]
		},
		"strings": {
			"name": "string.quoted.double.adl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.adl",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.adl"
}