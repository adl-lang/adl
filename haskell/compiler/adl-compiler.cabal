executable adlc
  main-is:            Main.hs
  hs-source-dirs:     adlc
  ghc-options:       -fwarn-incomplete-patterns
  other-modules:      Paths_adl_compiler
  build-depends:      base
                    , text
                    , mtl
                    , filepath
                    , executable-path
                    , adl-lib0
                    , adl-runtime
                    , adl-compiler

test-suite adlc-tests
  type:               exitcode-stdio-1.0
  main-is:            Main.hs
  hs-source-dirs:     tests
  ghc-options:       -fwarn-incomplete-patterns
  build-depends:      base
                    , bytestring
                    , text
                    , filepath
                    , directory
                    , hspec
                    , stm
                    , temporary
                    , adl-lib0
                    , adl-runtime
                    , adl-compiler

-- Library code including generated ADL
-- publically referenceable by other projects as `adl-compiler`
library
  hs-source-dirs:    src
  ghc-options:       -fwarn-incomplete-patterns
  exposed-modules:    ADL.Compiler.Backends.AST
                    , ADL.Compiler.Backends.Cpp
                    , ADL.Compiler.Backends.Java
                    , ADL.Compiler.Backends.Java.Internal
